// 20191117090257
// https://raw.githubusercontent.com/vincedgy/graphql-tutorial/master/.eslintrc

{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["eslint-plugin-graphql"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "codeFrame": true
  },
  "rules": {
    "strict": 0,
    "max-len": [
      1,
      120,
      2,
      {
        "ignoreComments": true
      }
    ]
  }
}
